<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FragmentosActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="417dp"
            android:layout_height="516dp" android:id="@+id/ly_fragmentos" app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="-3dp" android:layout_marginTop="88dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0">

    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
            android:text="TRES"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_tres"
            app:layout_constraintTop_toTopOf="@+id/btn_dos"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="44dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_dos" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="UNO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_uno"
            app:layout_constraintTop_toTopOf="@+id/btn_dos"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="60dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_dos"/>
    <Button
            android:text="DOS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_dos"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/ly_fragmentos"
            app:layout_constraintStart_toEndOf="@+id/btn_uno" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_tres" android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>