<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".modulo_clientes.ActualizarCliente" android:background="@color/colorFondo">

    <TextView
            android:text="@string/id_cliente"
            android:layout_width="115dp"
            android:layout_height="49dp"
            android:id="@+id/textView20" android:textSize="25sp"
            android:textColor="@color/colorCampos" android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView15"
            android:layout_marginBottom="32dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"
            android:layout_marginStart="4dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/txt_act_id_cli"
            app:layout_constraintHorizontal_bias="0.717"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_act_ced_cli"
            android:hint="@string/cedula_cliente" android:textSize="20sp"
            android:textColor="@color/colorTextoCampos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="296dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="@string/cedula_cliente"
            android:layout_width="122dp"
            android:layout_height="48dp"
            android:id="@+id/textView19" android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/colorCampos"
            android:textStyle="bold" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.568" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/txt_act_ced_cli"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_act_ape_cli"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/apellido_cliente" android:textSize="20sp"
            android:textColor="@color/colorTextoCampos"
            app:layout_constraintBottom_toTopOf="@+id/txt_act_ced_cli"
            android:layout_marginBottom="24dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="@string/apellido_cliente"
            android:layout_width="119dp"
            android:layout_height="45dp"
            android:id="@+id/textView18" android:textSize="25sp"
            android:layout_marginStart="28dp" app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/colorCampos"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView19" android:layout_marginBottom="20dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.978"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/txt_act_ape_cli"
            app:layout_constraintHorizontal_bias="0.1"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_act_nom_cli"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/nombre_cliente" android:textSize="20sp"
            android:textColor="@color/colorTextoCampos"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_act_ape_cli"
            android:layout_marginBottom="20dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.97"/>
    <TextView
            android:text="@string/nombre_cliente"
            android:layout_width="118dp"
            android:layout_height="49dp"
            android:id="@+id/textView15" android:textSize="25sp"
            android:textColor="@color/colorCampos" android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView18" android:layout_marginBottom="20dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/txt_act_nom_cli" app:layout_constraintHorizontal_bias="0.702"/>
    <TextView
            android:text="@string/id_cliente"
            android:layout_width="226dp"
            android:layout_height="46dp"
            android:id="@+id/txt_act_id_cli"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="25sp"
            android:textColor="@color/colorTextoCampos"
            android:layout_marginTop="124dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_act_nom_cli" app:layout_constraintVertical_bias="0.698"
            android:layout_marginEnd="12dp"/>
    <Button
            android:text="@string/actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_eje_act_cli" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.808" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textColor="@color/colorTextoBotones"
            android:backgroundTint="@color/colorBotones"/>
</android.support.constraint.ConstraintLayout>