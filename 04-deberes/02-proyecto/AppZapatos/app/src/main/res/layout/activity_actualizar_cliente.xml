<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".modulo_clientes.ActualizarCliente" android:background="@color/colorFondo">

    <TextView
            android:text="@string/id_cliente"
            android:layout_width="119dp"
            android:layout_height="49dp"
            android:id="@+id/textView20" android:textSize="25sp"
            android:layout_marginStart="40dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:textColor="@color/colorCampos" android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView15"
            android:layout_marginBottom="32dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_act_ced_cli"
            android:hint="@string/cedula_cliente" android:textSize="20sp"
            android:textColor="@color/colorTextoCampos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="300dp"
            app:layout_constraintStart_toEndOf="@+id/textView19" android:layout_marginStart="8dp"/>
    <TextView
            android:text="@string/cedula_cliente"
            android:layout_width="122dp"
            android:layout_height="48dp"
            android:id="@+id/textView19" android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="300dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.102" android:textColor="@color/colorCampos"
            android:textStyle="bold"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_act_ape_cli"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/apellido_cliente" android:textSize="20sp"
            android:textColor="@color/colorTextoCampos"
            app:layout_constraintStart_toEndOf="@+id/textView18"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.222" app:layout_constraintBottom_toTopOf="@+id/txt_act_ced_cli"
            android:layout_marginBottom="20dp"/>
    <TextView
            android:text="@string/apellido_cliente"
            android:layout_width="119dp"
            android:layout_height="45dp"
            android:id="@+id/textView18" android:textSize="25sp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.09" android:textColor="@color/colorCampos"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView19" android:layout_marginBottom="20dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_act_nom_cli"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/nombre_cliente" android:textSize="20sp"
            android:textColor="@color/colorTextoCampos"
            android:layout_marginEnd="4dp"
            app:layout_constraintStart_toEndOf="@+id/textView15"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toTopOf="@+id/txt_act_ape_cli"
            android:layout_marginBottom="20dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="@string/nombre_cliente"
            android:layout_width="118dp"
            android:layout_height="49dp"
            android:id="@+id/textView15" android:textSize="25sp"
            android:layout_marginStart="40dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:textColor="@color/colorCampos" android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView18" android:layout_marginBottom="20dp"/>
    <TextView
            android:text="@string/id_cliente"
            android:layout_width="235dp"
            android:layout_height="41dp"
            android:id="@+id/txt_act_id_cli"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textSize="20sp"
            android:textColor="@color/colorTextoCampos"
            app:layout_constraintStart_toEndOf="@+id/textView20" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="176dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.808" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textColor="@color/colorTextoBotones"
            android:backgroundTint="@color/colorBotones"/>
</android.support.constraint.ConstraintLayout>