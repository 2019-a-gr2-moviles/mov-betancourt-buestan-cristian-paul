<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".actividades.GestionPacientes">

    <Button
            android:text="@string/btn_crear_pac"
            android:layout_width="202dp"
            android:layout_height="49dp"
            android:id="@+id/btn_crear_paciente"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn_gestion_paciente"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_mapa2"/>
    <Button
            android:text="@string/btn_ges_pac"
            android:layout_width="211dp"
            android:layout_height="52dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btn_gestion_paciente" android:layout_marginTop="232dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="@string/btn_mapa"
            android:layout_width="194dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btn_mapa2" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="172dp"
            app:layout_constraintHorizontal_bias="0.498"/>
</androidx.constraintlayout.widget.ConstraintLayout>