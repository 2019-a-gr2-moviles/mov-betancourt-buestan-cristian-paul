<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".actividades.ListaMedicamentos">

    <android.support.v7.widget.RecyclerView
            android:layout_width="410dp"
            android:layout_height="686dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/rv_medicamentos"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="@string/btn_crear_pac"
            android:layout_width="146dp"
            android:layout_height="35dp"
            android:id="@+id/btn_crear_paciente" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/rv_medicamentos" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.625"/>
</android.support.constraint.ConstraintLayout>